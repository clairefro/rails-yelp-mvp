<h1><%= @restaurant.name %></h1>

<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>

<%= link_to restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure you want to delete '#{@restaurant.name}'?" } do %>
<p><i class="far fa-trash-alt"></i> Delete this restaurant</p>
<% end %>
<!-- edit details -->
<%= link_to edit_restaurant_path(@restaurant) do %>
<p><i class="fas fa-edit"></i> Edit details</p>
<% end %>
